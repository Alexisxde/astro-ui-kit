---
import { cn } from "@/lib/utils"
import GithubIcon from "./icons/github.astro"

interface Props {
	class?: string
}

const { class: className } = Astro.props
---

<header
	class={cn(
		"sticky top-0 z-30 flex h-12 max-h-12 min-h-12 items-center justify-between border-b-1 border-neutral-200 bg-neutral-100 px-6 dark:border-neutral-800 dark:bg-neutral-900",
		className
	)}>
	<div></div>
	<div class="flex items-center gap-4">
		<nav
			class="flex items-center gap-4 border-r-1 border-neutral-200 pr-4 text-sm font-medium dark:border-neutral-800">
			<a
				class="text-neutral-400 transition-colors duration-300 ease-in-out hover:text-neutral-100"
				href="/docs">Docs</a
			>
			<a
				class="text-neutral-400 transition-colors duration-300 ease-in-out hover:text-neutral-100"
				href="/docs/button">Components</a
			>
		</nav>
		<a
			class="text-neutral-400 transition-colors duration-300 ease-in-out hover:text-neutral-100"
			href="http://github.com/Alexisxde/astro-ui-kit">
			<GithubIcon class="size-5" />
		</a>
	</div>
</header>
